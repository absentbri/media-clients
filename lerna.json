{
  "command": {
    "bootstrap": {
      "loglevel": "silent"
    },
    "publish": {
      "allowBranch": [
        "develop",
        "master",
        "feature/*"
      ],
      "conventionalCommits": true,
      "message": "chore; publish",
      "yes": true
    },
    "run": {
      "loglevel": "silent",
      "stream": true
    },
    "version": {
      "allowBranch": [
        "develop",
        "master",
        "feature/*"
      ],
      "conventionalCommits": true,
      "message": "[skip ci] release",
      "yes": true
    }
  },
  "packages": [
    "cli/*",
    "packages/*"
  ],
  "version": "independent"
}
