{
  "author": "opensource@nativecode.com",
  "description": "Clients for Media Services",
  "keywords": [
    "radarr",
    "sonarr"
  ],
  "license": "MIT",
  "name": "media-clients",
  "private": true,
  "version": "0.0.0",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "lerna": "^3.14.1",
    "lerna-update-wizard": "^0.14.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "packages/*/src/**/*.spec.ts",
      "packages/**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/*/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "sourceMap": true,
    "temp-directory": ".cache/nyc"
  },
  "repository": {
    "type": "git",
    "url": "git@git.nativecode.net:nativecode/media-clients.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "coverage": "cross-env DEBUG= nyc report --reporter=text-lcov | coveralls",
    "format": "prettier --loglevel silent --write \"packages/*/src/**/*.ts\"",
    "link": "lerna link",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "test": "nyc mocha --opts ./mocha.opts"
  }
}