{
  "tasks": {
    "bootstrap": [
      "lerna bootstrap"
    ],
    "build": [
      "[bootstrap]",
      "[lint]",
      "lerna run build"
    ],
    "lint": [
      "jsonsort *.json",
      "jsonsort packages/**/*.json",
      "prettier --loglevel silent --write \"packages/*/{specs,src}/**/*.ts\"",
      "tslint --project tsconfig.json --config tslint.json"
    ],
    "test": [
      "[build]",
      "nyc mocha --opts mocha.opts"
    ],
    "upgrade": [
      "npm-check -y",
      "lerna run upgrade"
    ]
  }
}
